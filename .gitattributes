# Set default behavior to automatically normalize line endings.
* text=auto

# Force batch scripts to always use CRLF line endings so that if a repo is accessed
# in Windows via a file share from Linux, the scripts will work.
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Force bash scripts to always use LF line endings so they work on Linux/macOS
*.sh text eol=lf

# Python files
*.py text eol=lf
*.pyx text eol=lf
*.pyi text eol=lf

# Web files  
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.json text eol=lf

# Configuration files
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf

# Documentation
*.md text eol=lf
*.rst text eol=lf
*.txt text eol=lf

# Exclude files from exporting
.gitattributes export-ignore
.gitignore export-ignore
test_*.py export-ignore
tests/ export-ignore
*.log export-ignore
*.csv export-ignore
debug/ export-ignore
screenshots/ export-ignore